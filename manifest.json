{
    "manifest_version": 3,
    "name": "AI Helper",
    "version": "1.0",
    "description": "Ekstensi untuk mengambil screenshot dan menjawab pertanyaan dengan AI",
    "permissions": ["activeTab", "scripting", "storage", "windows"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icon.png"

    }
}
